{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/product/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Product details are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/category/:category": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Category pages are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/checkout": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to checkout",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/order-confirmation/:orderId": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view orders",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "OAuth callback is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}